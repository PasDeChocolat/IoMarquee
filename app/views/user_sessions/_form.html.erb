<%= form_tag user_sessions_path, :method => :post, :class => "form-signin", :role => "form" do %>
  <h2 class="form-signin-heading">Please sign in</h2>
  <div class="field">
    <%= text_field_tag :email, nil, class: "form-control", placeholder: "Username", autofocus: true, required: true %>
  </div>
  <div class="field">
    <%= password_field_tag :password, nil, class: "form-control", placeholder: "Password", required: true %>
  </div>
  <div class="actions">
    <%= submit_tag "Login", class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>