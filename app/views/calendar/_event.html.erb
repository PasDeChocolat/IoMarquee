<div class="row">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-6">
        <h2><%= event.title %> <small><%= event.tagline %></small></h2>
      </div>
      <div class="col-md-6">
        <h3 class="event-time"><%= start_time_for event %> <small class="pull-right">[ <%= time_til_start_of event %> ]</small></h3>
      </div>
    </div>
    <p><%= event.description %></p>
  </div>
</div>